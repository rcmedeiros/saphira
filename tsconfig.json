{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es2020",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "skipLibCheck": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/@types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}